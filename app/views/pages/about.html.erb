<% content_for :css_file, "pages_about" %>

<div class="about-container">
  <div class="banner-about">
    <%= image_tag "about.png", alt: "Scène de vie - À Propos", class: "banner-image-about" %>
  </div>

  <div class="main-content-about">
    <div class="left-content-about">
      <h2>À propos du projet :</h2>
      <p>Le Circographe est un espace associatif situé à Toulouse, dédié à la création, la pratique et la diffusion dans les arts du cirque et des arts urbains...</p>
      <h3>La Dépêche :</h3>
      <p>Le Circographe a déjà été la théâtre d'événements majeurs, notamment le Festival de cirque organisé...</p>
    </div>
    <div class="right-content-about">
      <div class="image-box-about">
        <%= image_tag "about.png", alt: "Image À Propos", class: "about-image" %>
      </div>
    </div>
  </div>

  <div class="team-section-about">
    <h2>L'équipe :</h2>
    <div class="team-grid-about">
      <% 6.times do %>
        <div class="team-member-about">
          <%= image_tag "utilisateur.png", alt: "Membre de l'équipe", class: "team-image-about" %>
          <p>Prénom Nom<br>Rôle</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="social-section-about">
    <h2>Réseaux sociaux et articles</h2>
    <div class="social-grid-about">
      <div class="social-item-about">
        <p>Évaluations Google et Facebook</p>
        <%= image_tag "avis.png", alt: "Google Reviews", class: "social-image-about" %>
      </div>
    </div>
  </div>
</div>
